version=4.8.2

source=(http://download.kde.org/stable/phonon/$name/$version/$name-$version.tar.xz)

build() {
	cd $name-$version
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
      		-DCMAKE_INSTALL_LIBDIR=lib       \
      		-DCMAKE_BUILD_TYPE=Release       \
		-Wno-dev ..
	make
	make DESTDIR=$PKG install
}

version=3.71
source=(http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/HTML-Parser-$version.tar.gz)

build() {
cd HTML-Parser-$version
perl Makefile.PL INSTALLDIRS=vendor
make
make DESTDIR=$PKG install

find $PKG \
        -name '*.bs' -or \
        -name .packlist -or \
        -name perllocal.pod | xargs rm
}

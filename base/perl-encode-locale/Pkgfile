version=1.03
source=(http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/Encode-Locale-$version.tar.gz)

build() {
cd Encode-Locale-$version
perl Makefile.PL INSTALLDIRS=vendor
make
make DESTDIR=$PKG install
find $PKG \
         -name '*.bs' -or \
         -name '.packlist' -or \
         -name 'perllocal.pod' | xargs rm
} 

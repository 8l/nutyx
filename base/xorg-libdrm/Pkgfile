version=2.4.58
_name=libdrm

source=( http://dri.freedesktop.org/${_name}/${_name}-$version.tar.bz2)

build() {
cd ${_name}-$version
sed -e "/pthread-stubs/d" -i configure.ac
autoreconf -fiv
./configure --prefix=/usr \
--enable-udev \
--mandir=/usr/share/man \
--infodir=/usr/share/info
make
make DESTDIR=$PKG install
}

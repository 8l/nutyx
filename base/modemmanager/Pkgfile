version=1.4.0

source=( http://www.freedesktop.org/software/ModemManager/ModemManager-$version.tar.xz)

build() {
cd ModemManager-$version
./configure --prefix=/usr        \
            --sysconfdir=/etc    \
            --localstatedir=/var \
            --disable-static 
make
make DESTDIR=$PKG install
}

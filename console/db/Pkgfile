version=6.0.20

source=(http://download.oracle.com/berkeley-db/$name-$version.tar.gz)

build() {
cd $name-$version
cd build_unix
../dist/configure --prefix=/usr \
--enable-compat185 \
--enable-shared \
--enable-cxx --enable-dbm
make
make DESTDIR=$PKG install
rm -rf $PKG/usr/docs
chmod -R +w $PKG
rm -rf $PKG/usr/share/info/dir
}

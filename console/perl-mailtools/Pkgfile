version=2.13
source=(http://search.cpan.org/CPAN/authors/id/M/MA/MARKOV/MailTools-$version.tar.gz)

build() {
cd MailTools-$version
perl Makefile.PL INSTALLDIRS=vendor
make
make DESTDIR=$PKG install
find $PKG \
         -name '*.bs' -or \
         -name '.packlist' -or \
         -name 'perllocal.pod' | xargs rm
}

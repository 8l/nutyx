version=4.10.0

_name=orage

source=(http://archive.xfce.org/src/apps/${_name}/${version%.*}/${_name}-$version.tar.bz2)

build() {
cd ${_name}-$version
	./configure --prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib/xfce4 \
	--localstatedir=/var \
	--disable-static
	make
	make DESTDIR=$PKG install
}


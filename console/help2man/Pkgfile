version=1.44.1
source=(http://ftp.gnu.org/gnu/help2man/help2man-$version.tar.xz)

build(){
    cd $name-$version
    ./configure --prefix=/usr \
        --mandir=/usr/share/man \
        --infodir=/usr/share/info \
        --libdir=/usr/lib
    make
    make DESTDIR=$PKG install    
}



# NuTyX Pkgfile (http://nutyx.org)

version=1.988
source=(http://www.cpan.org/authors/id/S/SU/SULLR/IO-Socket-SSL-$version.tar.gz)

build() {
cd IO-Socket-SSL-$version
yes | perl Makefile.PL INSTALLDIRS=vendor
make
make DESTDIR=$PKG install

find $PKG \
        -name '*.bs' -or \
        -name .packlist -or \
        -name perllocal.pod | xargs rm
}

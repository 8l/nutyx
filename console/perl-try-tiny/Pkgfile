version=0.22
source=(http://search.cpan.org/CPAN/authors/id/D/DO/DOY/Try-Tiny-$version.tar.gz)

build() {
cd Try-Tiny-$version
perl Makefile.PL INSTALLDIRS=vendor
make
make DESTDIR=$PKG install
find $PKG \
        -name '*.bs' -or \
        -name .packlist -or \
        -name perllocal.pod | xargs rm
}

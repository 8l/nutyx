version=20141126

source=(https://github.com/fontforge/fontforge/releases/download/${version}/fontforge-2014-11-26-Unix-Source.tar.gz)

build() {
	cd $name-$version
	./bootstrap
	./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/fontforge-$version
	make
	make DESTDIR=$PKG install
}

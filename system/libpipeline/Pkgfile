version=1.3.0
# Description: Librairie pour la manipulation des sous-process via les tubes (pipes)
# URL: http://libpipeline.nongnu.org/
# Maintainer: Colin Watson cjwatson at debian dot org
# Packager: tnuttens at gmail dot com
source=(http://download.savannah.gnu.org/releases/libpipeline/libpipeline-$version.tar.gz)
PKGMK_GROUPS=(devel man)
build()
{
cd $name-$version
PKG_CONFIG_PATH=/tools/lib/pkgconfig \
./configure --prefix=/usr \
--libdir=/lib 
make
make DESTDIR=$PKG install
mkdir $PKG/usr/lib
mv $PKG/lib/pkgconfig \
$PKG/usr/lib
}

version=1.16
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz) 

build() {
cd $name-$version
./configure --prefix=/usr \
--sysconfdir=/etc \
--with-ssl=openssl \
--disable-debug \
--mandir=/usr/share/man \
--infodir=/usr/share/info
make
make DESTDIR=$PKG install
rm -rf $PKG/usr/share/info/dir
}

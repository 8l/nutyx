version=3.5.2
source=(http://icculus.org/openbox/releases/$name-$version.tar.gz
openbox.xinitrc
)

build(){
    cd $name-$version
    ./configure --prefix=/usr \
                --with-x \
                --enable-startup-notification \
                --sysconfdir=/etc
    make
    make DESTDIR=$PKG install
    install -D -m644 ../openbox.xinitrc \
        $PKG/etc/X11/dm/openbox.xinitrc
} 
  

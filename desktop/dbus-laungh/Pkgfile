version=1.8.8
PKGMK_GROUPS=()

source=(http://dbus.freedesktop.org/releases/dbus/dbus-$version.tar.gz)

build() {
	cd dbus-$version
	./configure --prefix=/usr \
		--localstatedir=/var \
		--sysconfdir=/etc \
		--with-console-auth-dir=/run/console \
		--without-systemdsystemunitdir \
		--disable-systemd --disable-static

	make
	make DESTDIR=$PKG install
	mv -v $PKG/usr/share/doc/dbus \
	$PKG/usr/share/doc/dbus-$version
	rm -r $PKG/{etc,usr/{lib{,exec},share,include}}
	for i in \
usr/bin/dbus-cleanup-sockets \
usr/bin/dbus-daemon \
usr/bin/dbus-monitor \
usr/bin/dbus-run-session \
usr/bin/dbus-send \
usr/bin/dbus-uuidgen
	do
		rm $PKG/$i
	done
}

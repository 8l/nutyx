version=0.4.2


source=(ftp://ftp.kde.org/pub/kde/stable/$name/$name-$version.tar.bz2)

build() {
        cd $name-$version
        mkdir build
        cd build
        cmake -DCMAKE_INSTALL_PREFIX=/usr \
              -DCMAKE_BUILD_TYPE=Release         \
              -DQT4_BUILD=ON                     \
              -Wno-dev .. 
	make
        make DESTDIR=$PKG install
}

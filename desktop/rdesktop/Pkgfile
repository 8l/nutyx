version=1.8.2

source=(http://downloads.sourceforge.net/$name/$name-$version.tar.gz
	rdesktop-send_physical_buttons.diff)

build() {
	cd $name-$version
	 patch -i $SRC/rdesktop-send_physical_buttons.diff 

        ./configure --prefix=/usr \
		--disable-credssp \
		--disable-smartcard
	make
	make DESTDIR=$PKG install

}
  

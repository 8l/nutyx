version=4.14.0
_name=oxygen-icons-svg
_name=oxygen-icons

source=(http://download.kde.org/stable/$version/src/${_name}-$version.tar.xz \
	http://nutyx.meticul.eu/files/patchs/${_name}/icon-sekong.png)

build() {
	cd ${_name}-$version
	mkdir build
	cd build
	cmake ../ -DCMAKE_INSTALL_PREFIX=$KDE_PREFIX ..
	cd $SRC/${_name}-*
	find scalable -type f ! -name '*.sh' -exec \
		install -D -m644 "{}" $PKG/usr/share/icons/oxygen/{} \;
}


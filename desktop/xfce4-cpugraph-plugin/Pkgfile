version=1.0.5

source=(http://archive.xfce.org/src/panel-plugins/$name/1.0/$name-$version.tar.bz2)

build() {
cd $name-$version
	./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --disable-debug
	make
	make DESTDIR=$PKG install
}


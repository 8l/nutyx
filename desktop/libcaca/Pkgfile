version=0.99.beta18

source=(http://libcaca.zoy.org/files/libcaca/libcaca-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
                --disable-doc  \
                --localstatedir=/var
	make
	make DESTDIR=$PKG install
}
  

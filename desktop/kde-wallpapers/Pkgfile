version=4.14.0

source=(http://download.kde.org/stable/$version/src/$name-$version.tar.xz )	

build() {
	cd $name-$version
        mkdir build
        cd build
 	cmake -DCMAKE_INSTALL_PREFIX=$KDE_PREFIX \
      		-DSYSCONF_INSTALL_DIR=/etc/kde \
      		.. 
        make
        make DESTDIR=$PKG install
}

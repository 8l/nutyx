version=1.15.2

source=(http://downloads.nutyx.org/archives/xorg/individual/xserver/$name-$version.tar.bz2
	http://www.linuxfromscratch.org/patches/blfs/svn/xorg-server-$version-add_prime_support-1.patch)

build() {
cd $name-$version
patch -Np1 -i ../$name-$version-add_prime_support-1.patch
./configure $XORG_CONFIG \
--with-xkb-output=/var/lib/xkb \
--with-fontrootdir=/usr/share/fonts \
--enable-install-setuid
make
make DESTDIR=$PKG install
rm -rf $PKG/var
}

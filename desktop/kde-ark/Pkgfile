version=4.14.0
_name=ark

source=(http://download.kde.org/stable/$version/src/${_name}-$version.tar.xz )

build() {
	cd ${_name}-$version
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=$KDE_PREFIX \
      		-DSYSCONF_INSTALL_DIR=/etc/kde \
		-DCMAKE_BUILD_TYPE=Release \
      		.. 
	make
	make DESTDIR=$PKG install
}


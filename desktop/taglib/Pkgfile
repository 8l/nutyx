version=1.9.1
source=( https://github.com/taglib/taglib/releases/download/v$version/$name-$version.tar.gz)

build() {
        cd $name-$version
        mkdir build
        cd build
        cmake -DCMAKE_INSTALL_PREFIX=/usr \
              -DCMAKE_BUILD_TYPE=Release  \
                    ..
        make
        make DESTDIR=$PKG install
}


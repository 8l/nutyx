version=4.11.1

source=(http://sourceforge.net/projects/pyqt/files/PyQt4/PyQt-$version/PyQt-x11-gpl-$version.tar.gz)
build() {
	cd PyQt-x11-gpl-$version

	python2 configure.py \
		-v /usr/share/sip \
		-q /usr/bin/qmake \
        --confirm-license \
    	--qsci-api
	make
	make DESTDIR=$PKG INSTALL_ROOT=$PKG install
}

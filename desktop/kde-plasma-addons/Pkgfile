
_name=kdeplasma-addons


source=(http://download.kde.org/stable/$version/src/${_name}-$version.tar.xz)

build() {
	cd ${_name}-$version
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
      		-DSYSCONF_INSTALL_DIR=/etc/kde \
		-DWITH_Nepomuk=OFF \
      		..  
	make
	make DESTDIR=$PKG install
}


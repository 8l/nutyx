version=1.3.2
source=(http://fltk.org/pub/fltk/$version/fltk-$version-source.tar.gz)
build() {
cd fltk-*
./configure --prefix=/usr \
--mandir=/usr/share/man \
--infodir=/usr/share/info \
--enable-threads \
--enable-shared \
--enable-xft
make
make DESTDIR=$PKG install
make DESTDIR=$PKG install-desktop
}

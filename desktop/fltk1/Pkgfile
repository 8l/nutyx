version=1.3.3
source=(http://fltk.org/pub/fltk/$version/fltk-$version-source.tar.gz
	 http://www.linuxfromscratch.org/patches/blfs/svn/fltk-1.3.3-dynamic_libs-1.patch)
build() {
cd fltk-*
patch -Np1 -i ../fltk-1.3.3-dynamic_libs-1.patch
sed -i -e '/cat./d' documentation/Makefile
./configure --prefix=/usr \
--mandir=/usr/share/man \
--infodir=/usr/share/info \
--enable-threads \
--enable-shared \
--enable-xft
make
make DESTDIR=$PKG install
make DESTDIR=$PKG install-desktop
}

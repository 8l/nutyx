version=1.0.2.1

source=(ftp://ftp.kde.org/pub/kde/stable/$name/$version/src/$name-$version.tar.xz)

build() {
        cd $name-$version
        mkdir build
        cd build
        cmake -DCMAKE_INSTALL_PREFIX=$KDE_PREFIX \
                -DCMAKE_BUILD_TYPE=Release \
                -DSYSCONF_INSTALL_DIR=/etc/kde \
                ..
        make
        make DESTDIR=$PKG install
}

version=2.0.3

source=(http://delta.affinix.com/download/$name/2.0/$name-$version.tar.bz2)

build() {
	cd $name-$version
	sed -i '217s@set@this->set@' src/botantools/botan/botan/secmem.h
	./configure --prefix=/usr \
        	    --certstore-path=/etc/ssl/ca-bundle.crt 
	make
	make INSTALL_ROOT=$PKG install
	rm -f $(find $PKG -name '*.debug') $(find $PKG -name 'README')
}
  

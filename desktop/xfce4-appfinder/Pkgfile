version=4.10.1

source=(http://archive.xfce.org/src/xfce/$name/${version%.*}/$name-$version.tar.bz2)

build() {
cd $name-$version
./configure --prefix=/usr \
--sysconfdir=/etc \
--libexecdir=/usr/lib/xfce4 \
--localstatedir=/var \
--disable-static
make
make DESTDIR=$PKG install
	
for i in /usr/bin/xfrun4
do rm $PKG/$i
done
}

version=4.7.2

source=(ftp://ftp.kde.org/pub/kde/stable/phonon/$name/$version/src/$name-$version.tar.xz)

build() {
	cd $name-$version
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=$KDE_PREFIX \
      		-DCMAKE_INSTALL_LIBDIR=lib       \
      		-DCMAKE_BUILD_TYPE=Release       \
		-Wno-dev ..
	make
	make DESTDIR=$PKG install
}

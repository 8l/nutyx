version=2.8.0

source=(http://download.kde.org/stable/amarok/2.8.0/src/amarok-$version.tar.bz2)

build() {
cd amarok-$version
mkdir build &&
cd    build &&
cmake -DCMAKE_INSTALL_PREFIX=$KDE_PREFIX \
      -DCMAKE_BUILD_TYPE=Release         \
      -DKDE4_BUILD_TESTS=OFF             \
      -Wno-dev .. &&
make
make DESTDIR=$PKG install
}
 

version=0.1

source=(http://downloads.yoctoproject.org/releases/matchbox/$name/$version/$name-$version.tar.bz2)

build() {
cd $name-$version
./configure --prefix=/usr        \
            --sysconfdir=/etc    \
            --localstatedir=/var \
            --disable-static
make AM_LDFLAGS=-lX11
make DESTDIR=$PKG install
}

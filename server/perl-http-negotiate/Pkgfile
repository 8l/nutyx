version=6.01
source=(http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/HTTP-Negotiate-$version.tar.gz)

build() {
cd HTTP-Negotiate-$version
perl Makefile.PL INSTALLDIRS=vendor
make
make DESTDIR=$PKG install

find $PKG \
         -name '*.bs' -or \
         -name '.packlist' -or \
         -name 'perllocal.pod' | xargs rm
}

version=0.8.15
source=(http://irssi.org/files/$name-$version.tar.bz2)

build() {
cd $name-$version
	./configure --prefix=/usr \
	--sysconfdir=/etc \
	--enable-ipv6 \
	--with-textui \
	--with-proxy
	make
	make DESTDIR=$PKG install

find $PKG \
	-name .packlist -or \
	-name perllocal.pod -or \
	-name '*.bs' -or \
	-name autosplit.ix  | xargs rm
}

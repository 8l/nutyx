version=1.3.0
source=(http://downloads.sourceforge.net/nfs/$name-$version.tar.bz2 
	 http://www.linuxfromscratch.org/patches/blfs/svn/$name-$version-gcc_4_9-1.patch)
build() {
source  /etc/blfs-bootscripts
wget \
http://downloads.nutyx.org/files/patchs/aaabasicfs/$scripts-$scriptsversion.tar.bz2
tar xvf $scripts-$scriptsversion.tar.bz2 
	
# build package
cd $name-$version
patch -Np1 -i ../$name-$version-gcc_4_9-1.patch 
./configure --prefix=/usr     \
--sysconfdir=/etc \
--disable-nfsv4   \
--disable-nfsv41  \
--disable-gss \
--without-tcp-wrappers		

make
mkdir $PKG/sbin
make DESTDIR=$PKG install

cd ../$scripts-$scriptsversion
make DESTDIR=$PKG install-nfs-client
}

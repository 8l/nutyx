version=0.1.2

source=(http://download.netsurf-browser.org/libs/releases/$name-$version-src.tar.gz)
build() {
cd $name-$version
sed 's:-Wall::' -i Makefile
make PREFIX=/usr COMPONENT_TYPE="lib-shared"
make PREFIX=/usr COMPONENT_TYPE="lib-static"
make install PREFIX=/usr DESTDIR=$PKG COMPONENT_TYPE="lib-shared"
make install PREFIX=/usr DESTDIR=$PKG COMPONENT_TYPE="lib-static"
}

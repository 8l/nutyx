version=2.10.10
source=(http://downloads.nutyx.org/archives/gnome/sources/$name/${version%.*}/$name-$version.tar.xz
	 http://www.linuxfromscratch.org/patches/blfs/svn/ptlib-$version-bison_fixes-1.patch)

build() {
cd $name-$version
patch -Np1 -i ../ptlib-$version-bison_fixes-1.patch
./configure --prefix=/usr
make 
make DESTDIR=$PKG install
chmod -v 755 $PKG/usr/lib/libpt.so.2.10.10
}

version=6.06
source=(http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/Net-HTTP-$version.tar.gz)

build() {
cd Net-HTTP-$version
perl Makefile.PL INSTALLDIRS=vendor
make
make DESTDIR=$PKG install
find $PKG \
         -name '*.bs' -or \
         -name '.packlist' -or \
         -name 'perllocal.pod' | xargs rm
}

version=2.1.26

source=(ftp://ftp.cyrusimap.org/cyrus-sasl/$name-$version.tar.gz
	http://www.linuxfromscratch.org/patches/blfs/svn/cyrus-sasl-$version-fixes-1.patch)

build() {
	cd $name-$version
	patch -Np1 -i ../cyrus-sasl-$version-fixes-1.patch
	autoreconf -fi 
	pushd saslauthd
	autoreconf -fi
	popd
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--with-dbpath=/var/lib/sasl/sasldb2 \
		--with-saslauthd=/var/run/saslauthd \
		--disable-gssapi
	make
	make DESTDIR=$PKG install
	install -v -m700 -d $PKG/var/lib/sasl $PKG/var/run/saslauthd
}
 

version=5.0.1

source=( https://github.com/downloads/metabrainz/libmusicbrainz/$name-$version.tar.gz
	 http://www.linuxfromscratch.org/patches/blfs/svn/$name-$version-build_system-1.patch)

build() {
	cd $name-$version
	patch -Np1 -i ../libmusicbrainz-5.0.1-build_system-1.patch
	mkdir build
  	cd build
  	cmake .. \
      		-DCMAKE_INSTALL_PREFIX:PATH=/usr \
      		-DBUILD_SHARED_LIBS:BOOL=ON \
      		-DBUILD_STATIC_LIBS:BOOL=OFF
  	make
	make DESTDIR=$PKG install
}

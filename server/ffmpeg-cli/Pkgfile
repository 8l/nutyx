version=2.2.4
source=(http://ffmpeg.org/releases/ffmpeg-$version.tar.bz2 )

build() {
cd ffmpeg-$version
sed -i 's/-lflite"/-lflite -lasound"/' configure
./configure --prefix=/usr        \
            --enable-gpl         \
            --enable-version3    \
            --enable-nonfree     \
            --disable-static     \
            --enable-shared      \
            --disable-debug      \
            --enable-libmp3lame  \
            --enable-libtheora   \
            --enable-libvorbis   \
            --enable-libvpx      \
            --enable-libx264
make
make DESTDIR=$PKG install
}
